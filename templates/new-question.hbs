<div class="row text-center vertically-spaced-md">
    <h4>NEW POST</h4>
</div>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <form>
          <div class="form-group">
            <label for="title">Title</label>
            {{input value=title id="title" class="form-control"}}
          </div>

          <div class="form-group">
            <label for="body">Body</label>
            {{textarea value=body id="body" class="form-control" rows="15"}}
          </div>

          <button class="btn btn-lg btn-primary centered" {{action 'save'}}>Save</button>
        </form>
    </div>
</div>
